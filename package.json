{
	"name": "kibi",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"paraglide:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"prepare": "svelte-kit sync || echo ''",
		"check": "pnpm run paraglide:compile && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm run paraglide:compile && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest --run --coverage",
		"test": "pnpm run test:unit && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"test:visual": "playwright test e2e/visual.spec.ts",
		"test:visual:review": "playwright show-report",
		"test:visual:approve": "playwright test e2e/visual.spec.ts --update-snapshots",
		"playwright": "playwright",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@argos-ci/playwright": "^6.3.4",
		"@chromatic-com/storybook": "^4.1.3",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@fontsource-variable/outfit": "^5.2.8",
		"@inlang/paraglide-js": "^2.5.0",
		"@lucide/lab": "^0.1.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@playwright/test": "^1.56.1",
		"@storybook/addon-a11y": "^10.1.0",
		"@storybook/addon-docs": "^10.1.0",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.1.0",
		"@storybook/sveltekit": "^10.1.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/lz-string": "^1.5.0",
		"@types/node": "^24",
		"@types/pg": "^8.15.6",
		"@types/qrcode": "^1.5.6",
		"@types/sortablejs": "^1.15.9",
		"@vitest/browser-playwright": "^4.0.10",
		"@vitest/coverage-v8": "^4.0.10",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.1.0",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"jsdom": "^27.2.0",
		"lefthook": "^2.0.4",
		"lucide-svelte": "^0.555.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
